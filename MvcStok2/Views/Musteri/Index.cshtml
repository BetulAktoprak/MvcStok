@using MvcStok2.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p>
                    <b>Aranacak Müşteri Adı:</b> @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
   

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var mtr in Model)
        {
            <tr>
                <th>@mtr.MUSTERIID</th>
                <td>@mtr.MUSTERIAD</td>
                <td>@mtr.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mtr.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mtr.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SIL BUTONU", "SIL", new { id = mtr.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" }) </td>
            </tr>
            }
    </tbody>
</table>
<a href="/MUSTERI/YeniMusteri" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>



